                <button id="logout">Log Out</button>
                {{ else }}
                <a href="/login">Log In</a>
                {{/if}}
            </header>
        </nav>
        <main class="container">
            {{{ body }}}
        </main>
        <footer>
            Thanks for visiting!
        </footer>
    </body>
    <script src="/javascript/logout.js"></script>
    <script src="/javascript/pwa.js"></script>
